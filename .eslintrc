{
  "extends": ["airbnb-base"],

  "parser": "babel-eslint",

  "plugins": [
    "eslint-plugin-react"
  ],

  "rules": {
    "max-len": [2, 120, 2, {
      ignoreUrls: true,
      ignoreComments: false
    }],
    "react/jsx-uses-vars": 1,
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "default-case": 0,
    "camelcase": 0,
    "import/no-unresolved": 0,
    "no-shadow": 0,
    "consistent-return": 0,
    "radix": 0,
    "no-confusing-arrow": 0,

    "react/jsx-closing-bracket-location": "off",
    "react/jsx-no-bind": 0
  },

  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "experimentalObjectRestSpread": true
  },

  "globals": {
    "__DEV__": false,
  },

  "env": {
    "browser": true,
    "mocha": true
  }
}
